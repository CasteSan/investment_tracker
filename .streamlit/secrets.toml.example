# =============================================================================
# Configuracion de Secrets para Investment Tracker (Cloud Mode)
# =============================================================================
#
# INSTRUCCIONES:
# 1. NO commitear este archivo con valores reales a git
# 2. En desarrollo local, copia este archivo a secrets.toml y edita los valores
# 3. En Streamlit Cloud, copia el contenido al Dashboard:
#    Settings > Secrets > Paste content
#
# Para generar hash de password:
#    python -c "from src.services.auth_service import AuthService; print(AuthService.generate_password_hash('tu_password'))"
#
# =============================================================================

# Conexion a PostgreSQL (Supabase)
# Obtener de: Supabase Dashboard > Settings > Database > Connection String
DATABASE_URL = "postgresql://postgres:[PASSWORD]@[HOST]:5432/postgres"

# Configuracion de autenticacion
[auth]

# Usuarios autorizados
# Cada usuario tiene:
# - password: Hash SHA256 del password
# - portfolio_id: ID del portfolio asignado en la BD
# - portfolio_name: Nombre para mostrar (opcional)

[auth.users.usuario1]
password = "5e884898da28047d9171b1e15c0f2e5c2f3e5a07b6c3d4e5f6a7b8c9d0e1f2a3"  # SHA256 hash
portfolio_id = 1
